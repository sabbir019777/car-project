# ============================================
# FRONTEND (.env.local for local development)
# ============================================
# Backend API base URL. Use http://localhost:3000 for local dev.
# For Netlify builds, set this to your deployed Vercel backend.
VITE_API_BASE=http://localhost:3000

# ============================================
# BACKEND (server/.env for local development)
# ============================================
# MongoDB Connection Credentials
DB_USERNAME=your_mongo_username
DB_PASSWORD=your_mongo_password

# Frontend URLs allowed for CORS (comma-separated)
# For local dev, use localhost. For Netlify, add your Netlify deployment URL.
FRONTEND_URLS=http://localhost:5173,https://your-site.netlify.app

# Server Port (optional, defaults to 3000)
PORT=3000
